<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_gray"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <RelativeLayout
        android:id="@id/rr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:visibility="visible" >

        <AutoCompleteTextView
            android:id="@+id/editText_block"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_box_bg"
            android:cursorVisible="true"
            android:hint="Select Vendor"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/title_text_color"
            android:textCursorDrawable="@drawable/color_cursor" />

        <AutoCompleteTextView
            android:id="@+id/editText_tower"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/editText_block"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_box_bg"
            android:cursorVisible="true"
            android:hint="Tower"
            android:imeOptions="actionDone"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/title_text_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:visibility="gone" />

        <AutoCompleteTextView
            android:id="@+id/editText_floor"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/editText_tower"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_box_bg"
            android:cursorVisible="true"
            android:hint="Floor No"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/title_text_color"
            android:textCursorDrawable="@drawable/color_cursor" 
             android:visibility="gone"/>

        <Button
            android:id="@+id/proceed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_floor"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_selected"
            android:gravity="center"
            android:text="Search"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>