<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_root_view_deals_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:padding="4dp" >
    <RelativeLayout
        android:id="@+id/Rrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ReltiveLayout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e6e6e6" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="#d6d6d6" >

        <ImageView
            android:id="@+id/ImageView_offer_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:src="@drawable/download" />

        

    </LinearLayout>
    <TextView
            android:id="@+id/TextView_offer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="7dp"
            android:maxLines="2"
            android:text="SALE ON TOP BRANDS is always a GOOD IDEA 30 - 70 % OFF"
           
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_toRightOf="@+id/LinearLayout01" 
            android:gravity="left"
            android:layout_marginTop="10dp"
             android:textColor="@color/title_text_color"/>

   

    <RelativeLayout
        android:id="@+id/relativeLayout_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout01"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/TextView_offer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Click for offer"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TextView_coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView_offer_title"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Instore | Online"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini" />

        <TextView
            android:id="@+id/TextView_expires_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView_offer_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/TextView_coupon_type"
            android:ellipsize="end"
            android:gravity="right|bottom"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Expires on 30 Days"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini" />

        <ImageView
            android:id="@+id/ImageView_fav_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="invisible" >
        </ImageView>
    </RelativeLayout>

   
</RelativeLayout>
<RelativeLayout
        android:id="@+id/root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/ReltiveLayout_top"
         android:layout_marginTop="3dp" >

        <RelativeLayout
            android:id="@+id/layer1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2dp" >

            <TextView
                android:id="@+id/textView_store_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/textView_distance"
                android:ellipsize="end"
                android:maxLines="1"                
                android:text="Cloudnine"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/distance_background"
                android:ellipsize="end"
                android:maxLines="1"              
                android:text="4 km"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/text_size_mini" />

        </RelativeLayout>
        <TextView
            android:id="@+id/store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layer1"           
            android:drawableLeft="@drawable/store_address"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/text_size_small"
            android:padding="2dp" />
        <TextView
            android:id="@+id/textView_store_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layer1"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:text="No.1533, 9th Main, Jayanagar 3rd Block, Bangalore - 560011, Opposite Clumax"          
            android:gravity="top"
            android:layout_toRightOf="@+id/store_icon"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textView_store_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_below="@+id/textView_store_address"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="8934567890"  
            android:layout_marginLeft="1dp"          
            android:drawableLeft="@drawable/store_phone"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_phone_no"
            android:drawablePadding="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="10.30-4.00"
            android:padding="2dp"
            android:drawableLeft="@drawable/store_time"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini" />
        <!-- android:drawableLeft="@drawable/" -->

        <TextView
            android:id="@+id/take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/textView_open_time"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:textSize="@dimen/text_size_mini" 
            android:background="#009900"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="Take an appoinment" 
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rr0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_below="@+id/root"
         android:layout_marginTop="3dp" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="#d6d6d6" >

        <ImageView
            android:id="@+id/ImageView_offer_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:src="@drawable/taj" />

        

    </LinearLayout>
    <TextView
            android:id="@+id/TextView_offer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="7dp"
            android:maxLines="2"
            android:text="Leela Palace"
           
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_toRightOf="@+id/LinearLayout01" 
            android:gravity="center"
            android:layout_marginTop="10dp"
             android:textColor="@color/title_text_color"/>

               
        <TextView
            android:id="@+id/textView_store_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView_offer_name"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/LinearLayout01"
            android:drawableLeft="@drawable/store_address"
            android:text="23, HAL Airport Rd, ISRO Colony, Domlur, Bengaluru, Karnataka 560008"          
            android:gravity="top"
           
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="3dp" />
         <TextView
            android:id="@+id/textView_store_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_below="@+id/textView_store_address"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/LinearLayout01"
            android:maxLines="1"
            android:text="0834567890"  
            android:layout_marginLeft="1dp"          
            android:drawableLeft="@drawable/store_phone"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_phone_no"
            android:drawablePadding="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/LinearLayout01"
            android:text="10.30-4.00"
            android:padding="2dp"
            android:drawableLeft="@drawable/store_time"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini" />


    <RelativeLayout
        android:id="@+id/relativeLayout_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout01"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/TextView_offer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Click for offer"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TextView_coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView_offer_title"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Instore | Online"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini"
            android:visibility="gone" />

        
    </RelativeLayout>

   
</RelativeLayout>
<RelativeLayout
        android:id="@+id/rr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e6e6e6" android:layout_below="@+id/rr0"
        android:layout_marginTop="3dp">

    <LinearLayout
