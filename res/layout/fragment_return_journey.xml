<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_gray"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <RelativeLayout
        android:id="@+id/root1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_marginTop="7dp" >
        <TextView
            android:id="@+id/store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layer1"           
            android:drawableLeft="@drawable/store_address"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/text_size_small"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView_store_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/store_icon"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="top"
            android:text="Whitefield"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textView_store_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_address"
            android:layout_marginLeft="1dp"
            android:drawableLeft="@drawable/store_phone"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="8034567890"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_phone_no"
            android:drawableLeft="@drawable/store_time"
            android:drawablePadding="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="Today at 4.30 PM"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini" />
        <!-- android:drawableLeft="@drawable/" -->

        <TextView
            android:id="@+id/take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/textView_open_time"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:layout_marginBottom="5dp"
            android:background="#009900"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:text="Join"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_mini" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/root2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/root1" >
        <TextView
            android:id="@+id/store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"         
            android:drawableLeft="@drawable/store_address"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/text_size_small"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView_store_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layer1"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/store_icon"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="top"
            android:text="Whitefield"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textView_store_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_address"
            android:layout_marginLeft="1dp"
            android:drawableLeft="@drawable/store_phone"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="8464567890"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_phone_no"
            android:drawableLeft="@drawable/store_time"
            android:drawablePadding="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="12-12-2015 at 8.00 PM"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini" />
        <!-- android:drawableLeft="@drawable/" -->

        <TextView
            android:id="@+id/take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/textView_open_time"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:layout_marginBottom="5dp"
            android:background="#009900"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:text="Join"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_mini" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/root3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/root2" >
        <TextView
            android:id="@+id/store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"         
            android:drawableLeft="@drawable/store_address"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/text_size_small"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView_store_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layer1"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/store_icon"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="top"
            android:text="Marathahali"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textView_store_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_address"
            android:layout_marginLeft="1dp"
            android:drawableLeft="@drawable/store_phone"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="8464567890"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_phone_no"
            android:drawableLeft="@drawable/store_time"
            android:drawablePadding="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="12-12-2015 at 7.30 PM"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini" />
        <!-- android:drawableLeft="@drawable/" -->

        <TextView
            android:id="@+id/take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/textView_open_time"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:layout_marginBottom="5dp"
            android:background="#009900"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:text="Join"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_mini" />
    </RelativeLayout>

</RelativeLayout>