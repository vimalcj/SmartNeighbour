<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_root_view_store_list_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background_gray"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:id="@+id/layer1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2dp" >

            <TextView
                android:id="@+id/textView_store_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/textView_distance"
                android:ellipsize="end"
                android:maxLines="1"                
                android:text="Big Bazarrrrrrrrrr"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/distance_background"
                android:ellipsize="end"
                android:maxLines="1"              
                android:text="4 km"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/text_size_mini" />

        </RelativeLayout>
        <TextView
            android:id="@+id/store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layer1"           
            android:drawableLeft="@drawable/store_address"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/text_size_small"
            android:padding="2dp" />
        <TextView
            android:id="@+id/textView_store_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layer1"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:text="Addressjngkjfkhmflkhklfklhkglhhh,mhlkfkylhkyly"          
            android:gravity="top"
            android:layout_toRightOf="@+id/store_icon"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textView_store_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_below="@+id/textView_store_address"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1234567890"  
            android:layout_marginLeft="1dp"          
            android:drawableLeft="@drawable/store_phone"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_phone_no"
            android:drawablePadding="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="10.30-4.00"
            android:padding="2dp"
            android:drawableLeft="@drawable/store_time"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini" />
        <!-- android:drawableLeft="@drawable/" -->

        <TextView
            android:id="@+id/take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/textView_open_time"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:textSize="@dimen/text_size_mini" 
            android:background="#009900"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="Take an appoinment" 
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"/>

    </RelativeLayout>

</RelativeLayout>