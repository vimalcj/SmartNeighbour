<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_root_view_deals_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:padding="4dp" >

    <RelativeLayout
        android:id="@+id/ReltiveLayout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e6e6e6" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="#d6d6d6" >

        <ImageView
            android:id="@+id/ImageView_offer_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:src="@drawable/taj" />

        

    </LinearLayout>
    <TextView
            android:id="@+id/TextView_offer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="7dp"
            android:maxLines="2"
            android:text="Hotel Taj"
           
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_toRightOf="@+id/LinearLayout01" 
            android:gravity="center"
            android:layout_marginTop="10dp"
             android:textColor="@color/title_text_color"/>

               
        <TextView
            android:id="@+id/textView_store_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView_offer_name"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/LinearLayout01"
            android:drawableLeft="@drawable/store_address"
            android:text="Addressjngkjfkhmflkhklfklhkglhhh,mhlkfkylhkyly"          
            android:gravity="top"
           
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_small" />
         <TextView
            android:id="@+id/textView_store_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_below="@+id/textView_store_address"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/LinearLayout01"
            android:maxLines="1"
            android:text="1234567890"  
            android:layout_marginLeft="1dp"          
            android:drawableLeft="@drawable/store_phone"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_store_phone_no"
            android:drawablePadding="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/LinearLayout01"
            android:text="10.30-4.00"
            android:padding="2dp"
            android:drawableLeft="@drawable/store_time"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini" />


    <RelativeLayout
        android:id="@+id/relativeLayout_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout01"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/TextView_offer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Click for offer"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TextView_coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView_offer_title"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Instore | Online"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_mini"
            android:visibility="gone" />

        
    </RelativeLayout>

   
</RelativeLayout>
   

</RelativeLayout>